<odoo>
    <record id="view_energy_optimization_form" model="ir.ui.view">
        <field name="name">energy.optimization.form</field>
        <field name="model">energy.optimization</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="energy_usage"/>
                        <field name="machine_efficiency"/>
                        <field name="temperature"/>
                        <field name="humidity"/>
                        <field name="optimized_schedule" readonly="1"/>
                        <field name="maintenance_flag" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
